<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:id="@+id/btn_prev" android:text="@string/btn_prev" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <Button android:id="@+id/btn_next" android:text="@string/btn_next" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/crime_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
    </android.support.v4.view.ViewPager>
</LinearLayout>
